<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_ass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:src="@drawable/ic_time" />


            <TextView
                android:id="@+id/date_ass"

                android:layout_width="210sp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:text="Date"
                android:textSize="20sp"
                android:textAlignment="center"/>




            <ImageButton
                android:id="@+id/delete_ass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:src="@drawable/ic_delete" />


        </LinearLayout>


        <TextView
            android:id="@+id/topic_card_ass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Topic"

            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/weightage_card"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weightage"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subject_card_ass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Subject"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/desc_card_ass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Description"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/id_a"
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:textAlignment="center"
            android:textSize="2sp" />

    </LinearLayout>


</android.support.v7.widget.CardView>




